{
  "coc.preferences.snippets.enable": true,
  "coc.preferences.snippetStatusText": "‚ìà ",
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "go",
    "svg", // coc-svg support svg format
    "dart" // diagnostic-languageserver support dart format
  ],
  "coc.source.word.filetypes": [
    "markdown",
    "gitcommit",
    "log",
    "txt"
  ],
  // suggest
  "suggest.timeout": 500,
  "suggest.noselect": false,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.triggerCompletionWait": 100,
  "suggest.maxCompleteItemCount": 20,
  "suggest.detailMaxLength": 30,
  "suggest.detailField": "abbr",
  "suggest.snippetIndicator": "üåü",
  "suggest.echodocSupport": true,
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "snip"
  ],
  // diagnostic
  "diagnostic.enable": true,
  "diagnostic.signOffset": 100,
  "diagnostic.highlightOffset": 100,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic-languageserver.formatFiletypes": {
    "dart": "dartfmt",
  },
  //emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  "html.suggest.angular1": false, // angular1 is outdate, coc-angular support better
  // git 
  "git.enableGutters": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.addedSign.text": "‚ñé",
  "git.changedSign.text": "‚ñé",
  "git.removedSign.text": "‚ñè",
  "git.topRemovedSign.text": "‚ñî",
  "git.changeRemovedSign.text": "‚ñã",
  //python
  "python.autoComplete.addBrackets": true,
  // java
  "java.jdt.ls.home": "/opt/app/jdtls",
  "java.jdt.ls.vmargs": "-javaagent:/opt/app/jar/lombok.jar -Xbootclasspath/p:/opt/app/jar/lombok.jar",
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "hpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "golang": {
      "command": "go-langserver",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": true,
        "lintTool": "golint"
      }
    },
    "php": {
      "command": "intelephense",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "php"
      ]
    },
    "bash": {
      "command": "bash-language-server",
      "filetypes": [
        "sh"
      ],
      "args": [
        "start"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": [
        "lua"
      ]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": [
        "vim",
        "markdown",
        "eruby"
      ]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "dockerfile"
      ]
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "purescript"
      ]
    },
    "xml": {
      "command": "java",
      "args": [
        "-jar",
        "/opt/app/jar/org.eclipse.lsp4xml-0.3.0-uber.jar"
      ],
      "filetypes": [
        "xml"
      ]
    }
  }
  // vim:ft=jsonc
}
